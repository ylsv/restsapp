<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Добавить новый комментарий к ресторану <strong><%= restaurant.name %></strong></h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/restaurants/<%= restaurant._id %>/comments" method="POST">
                <div class="form-group">
                    <input class='form-control' type="text" name="comment[text]" placeholder="текст комментария">
                </div>
                <div class="form-group">
                    <input class='form-control' type="text" name="comment[author]" placeholder="автор">
                </div>
                <div class="form-group">
                    <button class='btn btn-lg btn-primary btn-block'>Добавить!</button>
                </div>
            </form>
            <a href="/restaurants">Назад</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>