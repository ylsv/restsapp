<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Отредактировать ресторан "<%= restaurant.name %>"</h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/restaurants/<%= restaurant._id %>?_method=PUT" method="POST" >
                <div class="form-group">
                    <input class='form-control' type="text" name="restaurant[name]" value="<%= restaurant.name %>">
                </div>
                <div class="form-group">
                    <input class='form-control' type="number" name="restaurant[price]" value="<%= restaurant.price %>" min="500" step="50">
                </div>
                <div class="form-group">
                    <input class='form-control' type="text" name="restaurant[image]" value="<%= restaurant.image %>">
                </div>
                <div class="form-group">
                    <textarea rows="7" class='form-control' type="text" name="restaurant[description]"><%= restaurant.description %></textarea>
                </div>
                <div class="form-group">
                    <button class='btn btn-lg btn-primary btn-block'>Редактировать!</button>
                </div>
            </form>
            <a href="/restaurants">Назад</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>